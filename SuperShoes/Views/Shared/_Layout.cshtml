<!DOCTYPE html>
<html ng-app="superShoes">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@
    <link rel="stylesheet" type="text/css" href="~/Lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Lib/bootstrap/dist/css/bootstrap-theme.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
</head>
<body ng-controller="rootCtrl">
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SuperShoes", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#!/">Tiendas</a></li>
                    <li><a href="#!/articles">Articulos</a></li>
                    @*<li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>*@
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content" id="body" ng-view>@RenderBody()
    </div>
    <div class="container">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SuperShoes ASP.NET 2017 Todos los Derechos Reservados</p>
        </footer>
    </div>

    <div id="loader" ng-show="isLoading">
        <div class="loader-anim">
            <img src="~/Content/Images/squares.svg" alt="Loading" />
        </div>
    </div>
    
    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")*@
    <script type="text/javascript" src="~/Lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/Lib/bootstrap/dist/js/bootstrap.min.js"></script>

    <script type="text/javascript" src="~/Lib/angular/angular.min.js"></script>
    <script type="text/javascript" src="~/Lib/angular-route/angular-route.min.js"></script>
    <script type="text/javascript" src="~/Lib/angular-base64/angular-base64.min.js"></script>

    <script type="text/javascript" src="~/App_Js/superShoes.module.js"></script>
    <script type="text/javascript" src="~/App_Js/superShoes.config.js"></script>

    <script type="text/javascript" src="~/App_Js/services/superShoesApi.js"></script>

    <script type="text/javascript" src="~/App_Js/controllers/rootCtrl.js"></script>
    <script type="text/javascript" src="~/App_Js/controllers/indexCtrl.js"></script>
    <script type="text/javascript" src="~/App_Js/controllers/storeCtrl.js"></script>
    <script type="text/javascript" src="~/App_Js/controllers/articlesCtrl.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
